{
    "appenders": {
        "file": {
            "type": "fileSync",
            "filename": "logs/file.log",
            "maxLogSize": 10485760,
            "numBackups": 5,
            "compress": true,
            "encoding": "utf-8",
            "mode": "0640",
            "layout": {
                "type": "pattern",
                "pattern": "[%d] [%p] [%c] ｜　%m"
            }
        },
        "dateFile": {
            "type": "dateFile",
            "filename": "logs/datefile.log",
            "pattern": "yyyy-MM-dd-hh-mm-ss",
            "compress": true
        },
        "console": {
            "type": "console"
        }
    },
    "categories": {
        "file": {
            "appenders": [
                "file"
            ],
            "level": "debug"
        },
        "default": {
            "appenders": [
                "file",
                "dateFile",
                "console"
            ],
            "level": "trace"
        }
    }
}