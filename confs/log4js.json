{
    "appenders": {
        "file": {
            "type": "fileSync",
            "filename": "logs/file.log",
            "maxLogSize": 10485760,
            "numBackups": 5,
            "compress": true,
            "encoding": "utf-8",
            "mode": "0640",
            "layout": {
                "type": "pattern",
                "pattern": "[%d] [%p] [%c] ｜　%m"
            }
        },
        "out": {
            "type": "stdout"
        },
        "err": {
            "type": "stderr"
        }
    },
    "categories": {
        "file": {
            "appenders": [
                "file"
            ],
            "level": "debug"
        },
        "default": {
            "appenders": [
                "file",
                "out",
                "err"
            ],
            "level": "debug"
        }
    }
}